{% extends 'base.j2' %}
{% block content %}

<div class="container">

<div class = "col-md-4" style = "margin-top:20px"> 
    <form> 
        <select id = "select-tags" onChange = "selectedTag()" class = "form-control"> 
            <option value = ''> Select Tags</option> 
            {% for tag in allTags %}
            <option value ="{{tag}}">{{tag}}</option> 
            {% endfor %}
        </select> 
    </form>  
</div> 

<div class = "col-md-6"> 
    <a href = "/createPost?interview=True" class = "btn btn-info btn-sm" role = "button" style = "margin-top: 20px">Add Interview Blog</a>
    <a href = "/createPost?interview=False" class = "btn btn-info btn-sm" role = "button" style = "margin-top: 20px">Create Post</a>
    {% for post in posts.items %}
        {% include 'shortBlog.j2' %}
    {% endfor %}

    <nav aria-label="Page navigation example">
    <ul class="pagination">
        {% if posts.has_prev %}
            <li class="page-item"><a class="page-link" href="{{ url_for('postList', page=posts.prev().page) }}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="{{ url_for('postList', page=posts.prev().page) }}">{{ posts.prev().page }}</a></li>
        {% endif%}
        <li class="page-item active"><a class="page-link" href="{{ url_for('postList', page=posts.page) }}">{{ posts.page }}</a></li>
        {% if posts.has_next %}
            <li class="page-item"><a class="page-link" href="{{ url_for('postList', page=posts.next().page) }}">{{ posts.next().page }}</a></li>
            <li class="page-item"><a class="page-link" href="{{ url_for('postList', page=posts.next().page) }}">Next</a></li>
        {% endif %}
    </ul>
    </nav>
</div> 
</div> 

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js" defer></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css">    

<script>
$(document).ready(function () {
    $("select").select2();
});

function selectedTag(){
    selected_tag = $('#select-tags').val();
    if(selected_tag){
        location.href = '/blogs?' + selected_tag; 
    } 
}
</script> 
{% endblock %}