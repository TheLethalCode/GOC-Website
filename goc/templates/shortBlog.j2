<hr> 
<h2><a href = "{{'/post?post_id=' + post.id|string}}">{{ post.title }}</a></h2> 
<p>{{ post.content }}</p> 

<div> 
<span class = "badge"> x days ago {{ post.published_at }} |
    <a href = "{{ '/profile/' + post.author.username}}">{{ post.author.username }}</a> 
</span> 
<div class = "pull-right"> 
    {% set themes = ['primary', 'secondary', 'success', 'info', 'warning', 'danger'] %}
    {% for i in range(post.tags.all()|length) %}
    <span class = "{{ 'badge badge-' + themes[i % 6] }}">{{ post.tags.all()[i].name }}</span> 
    {% endfor %}
</div> 
</div> 
